<?php $application = $block->getApplication(); ?>

<?php if($application['notifications']){ ?>
<div id="pbdNotification">
    <div class='title'><?= $application['title'] ?></div>
    <div class='content'>
        <div class="notification">
            <?php foreach($application['notifications'] as $notification) echo(sprintf("<p>%s.</p>", $notification)); ?>
